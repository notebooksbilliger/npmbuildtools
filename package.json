{
  "name": "@nbb.com/npmbuildtools",
  "version": "1.1.0",
  "description": "Tools for use with npm package management.",
  "main": "index.js",
  "scripts": {
    "test": "node ./node_modules/mocha/bin/_mocha --timeout 999999 --colors ./test/_suite.js",
    "postpack": "node -e \"require('./index').PostPack([ [ './lib/clean-package-elements', 'scripts.test', 'scripts.postpack', 'scripts.prepublishOnly', 'directories.test', 'directories.doc' ] ], true)\"",
    "prepublishOnly": "node -e \"require('./lib/generate-adoc').GenerateReadme()\""
  },
  "keywords": [
    "npm",
    "scripts",
    "javascript"
  ],
  "author": "Thorben Wolkersdorfer <thorbenw@nbb.com> (https://www.notebooksbilliger.de/)",
  "license": "MIT",
  "repository": "github:notebooksbilliger/npmbuildtools",
  "readme": "README.adoc",
  "engines": {
    "node": ">=8.17.0"
  },
  "directories": {
    "doc": "./doc",
    "lib": "./lib",
    "test": "./test"
  },
  "devDependencies": {
    "colors": "^1.4.0",
    "diff": "^4.0.2",
    "fs-extra": "^8.1.0",
    "intercept-stdout": "^0.1.2",
    "mocha": "^7.1.0",
    "semver": "^7.1.3",
    "tar": "^6.0.1",
    "tar4": "npm:tar@^4.4.13"
  }
}
